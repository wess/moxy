#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void assert_eq_int(int a, int b) {
  if (a != b) {
    fprintf(stderr, "assertion failed: %d != %d\n", a, b);
    exit(1);
  }
}

void assert_eq_str(string a, string b) {
  if (strcmp(a, b) != 0) {
    fprintf(stderr, "assertion failed: \"%s\" != \"%s\"\n", a, b);
    exit(1);
  }
}

void assert_true(int cond) {
  if (!cond) {
    fprintf(stderr, "assertion failed: expected true\n");
    exit(1);
  }
}

void assert_false(int cond) {
  if (cond) {
    fprintf(stderr, "assertion failed: expected false\n");
    exit(1);
  }
}
