#!/usr/bin/env bash
set -euo pipefail

REPO="wess/moxy"

version=$(
  gh api "repos/${REPO}/releases/latest" --jq '.tag_name' 2>/dev/null \
  || curl -fsSL "https://api.github.com/repos/${REPO}/releases/latest" \
       | grep '"tag_name"' | head -1 | sed 's/.*"v\(.*\)".*/\1/'
)

echo "${version}" | sed 's/^v//'
