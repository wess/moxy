#!/usr/bin/env bash
set -euo pipefail

if [ "${ASDF_INSTALL_TYPE}" != "version" ]; then
  echo "asdf-moxy only supports release versions" >&2
  exit 1
fi

mkdir -p "${ASDF_INSTALL_PATH}/bin"
cp "${ASDF_DOWNLOAD_PATH}/moxy" "${ASDF_INSTALL_PATH}/bin/moxy"
chmod +x "${ASDF_INSTALL_PATH}/bin/moxy"

echo "moxy v${ASDF_INSTALL_VERSION} installed"
