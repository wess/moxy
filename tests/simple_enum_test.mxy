// simple enum (no fields) should compile to plain typedef enum
enum Direction {
  North,
  South,
  East,
  West
}

// tagged enum still works
enum Shape {
  Circle(float radius),
  Rect(int w, int h),
  None
}

void main() {
  Direction d = Direction::North;
  match d {
    Direction::North => assert(1),
    Direction::South => assert(0),
    Direction::East => assert(0),
    Direction::West => assert(0),
  }

  // simple enum comparison
  Direction d2 = Direction::South;
  match d2 {
    Direction::North => assert(0),
    Direction::South => assert(1),
    Direction::East => assert(0),
    Direction::West => assert(0),
  }

  // tagged enum still works
  Shape s = Shape::Circle(3.14);
  match s {
    Shape::Circle(r) => assert(1),
    Shape::Rect(w) => assert(0),
    Shape::None => assert(0),
  }
}
