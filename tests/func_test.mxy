int add(int a, int b) {
  return a + b;
}

int factorial(int n) {
  if (n <= 1) {
    return 1;
  }
  return n * factorial(n - 1);
}

int fib(int n) {
  if (n <= 0) {
    return 0;
  }
  if (n == 1) {
    return 1;
  }
  return fib(n - 1) + fib(n - 2);
}

void main() {
  assert(add(2, 3) == 5);
  assert(add(0, 0) == 0);
  assert(add(-1, 1) == 0);

  assert(factorial(0) == 1);
  assert(factorial(1) == 1);
  assert(factorial(5) == 120);

  assert(fib(0) == 0);
  assert(fib(1) == 1);
  assert(fib(10) == 55);
}
