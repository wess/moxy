int apply(int x, int fn(int)) {
  return fn(x);
}

int apply2(int x, int y, int fn(int, int)) {
  return fn(x, y);
}

void main() {
  // expression lambda
  int a = apply(5, (int x) => x * 2);
  assert(a == 10);

  // block lambda
  int b = apply(3, (int x) => {
    int y = x + 10;
    return y * 2;
  });
  assert(b == 26);

  // lambda with addition
  int c = apply(7, (int n) => n + 1);
  assert(c == 8);

  // two-arg lambda
  int d = apply2(3, 4, (int a, int b) => a + b);
  assert(d == 7);
}
